<p class="youkoso">Editing Book</p>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <p class="edit">Title</p>
   <div class="edit-form"><%= f.text_field :title %>
   </div>
  <p class="edit">Body</p>
   <div class="edit-form"><%= f.text_field :body %>
   </div>
  <p class="edit"><%= f.submit 'Update Book' %></p>

  <%= link_to "Show",book_path(@book), {class: "edit2"} %>
  |
  <%= link_to "Back",books_path(@book), {class: "edit3"} %>
<% end %>