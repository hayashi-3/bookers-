  <h3>Books</h3>
  <table>
  <thead>
  <tr>
  	<th width="200">Title</th>
  	<th width="300">Body</th>
  <th></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  <tr>
  <td>
  <%= book.title %>
  </td>
  <td>
  <%= book.body %>
  </td>
  <td>
  <%= link_to "show", book_path(book.id) %>
  <%= link_to "edit", edit_book_path(book.id) %>
  <%= link_to "destroy", destroy_books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </td>
  </tr>
  <% end %>
  </tbody>
  </table>

 <h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<% end %>
