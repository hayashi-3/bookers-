  <h3>Books</h3>
  <table>
  <thead>
  <tr>
  	<th width="200">Title</th>
  	<th width="300">Body</th>
  </tr>
  </thead>

  <tbody>
  <% @book.each do |post| %>
  <tr>
  <td>
  <%= book.title %>
  </td>
  <td>
  <%= book.body %>
  </td>
  <td>
  <%= link_to "show",post_path(post.id) %>
  <%= link_to "edit",edit_post_path(post.id) %>
  <%= link_to "destroy", destroy_post_path(post.id),method::delete,"date-confirm" =>"Are you sure?" %>
  </td>
  </tr>
  <% end %>
  </tbody>
  </table>
 
  <h3>New book</h3>

  <!-- form_for部分 -->
  <%= form_for(@book, url: '/books') do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
 
  <h4>Body</h4>
  <%= f.text_area :body %>
 
  <%= f.submit 'Create Book' %>
 
<% end %>